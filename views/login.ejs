</head>
<body>
    <div class="main-container">

        <!--Header-->
        <header class="header">
            <h1 class="logo"><img src="/assets/images/logo.webp" alt="Logo do site"></h1>
            <nav class="navigation">
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/produtos">Produtos</a></li>
                    <li class="Headerlogin"><a href="/entrar">Entrar</a></li>
                    <li class="Headeregistrar"><a href="/cadastrar">Cadastra-se</a></li>
                    <span class="material-symbols-outlined">
                        search
                    </span>
                </ul>
            </nav>
        </header>
        <!--Header-->





        <main class="main-content">
            <section class="info-content">
              
                <form id="form" action="/entrar" method="POST">
                        <section class="logocentral">
                            <h1><img src="/assets/images/logo.webp" alt="Logo do site"></h1>
                            <p>Construindo e realizando sonhos</p>
                            <h1>Bem vindo(a) ao Casa Boa</h1>
                        </section>
                    <!-- Name -->
                    <label for="username">Nome</label>
                    <div class="input">
                        <i class="fa fa-user-circle-o" aria-hidden="true"></i>
                        <input type="text" name="username" id="username" placeholder="Username" required>
                    </div>
                    <!-- email -->
                    <label for="email">Email</label>
                    <div class="input">
                        <i class="far fa-envelope" aria-hidden="true"></i>
                        <input type="email" id="email" name="email" placeholder="Email" required><br>
                     </div>
                    <!-- senha -->
                    <label for="senha">Senha</label>
                    <div class="input">
                        <i class="fas fa-lock"></i>
                        <input type="password" id="senha" name="senha" placeholder="Password" required>
                    </div>
                    <!-- botão de login -->
                    <div id="btnLogin">
                        <button type="submit">Entrar</button>
                    </div>
                    <!-- botão de login-->

                    <!--botão para ir a tela de registrar-se-->
                    <div id="btnRegistrar">
                        <p><a href="/cadastrar">Não possui uma conta?
                        <br>Cadastrar-se apertando aqui</a></p>
                    </div>
                    <!--botão para ir a tela de registrar-se-->
                </form>

                <!-- Botão antes 
                 <div id="btn">
